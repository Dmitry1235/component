.HideList {
  &__item {
    margin-bottom 32px

    &_prev-btn {
      margin-bottom 24px
    }

    &:last-child {
      margin 0
    }
  }

  &__label {
    margin-bottom 4px
    font-size $fontSize-5
    line-height $lineHeight-4
  }

  &__title {
    display flex
  }

  &__date, &__address {
    color $textMutedColor
  }

  &__date {
    margin-right 20px
  }

  &__more {
    margin-bottom 24px
    padding 15px 28px
    background-color $borderGrayColor
    border-radius 8px
  }

  &__points {
    display flex
    width 6px
    height 6px
    background-color $textActiveButtonColor
    border-radius 50%

    &:after, &:before {
      display block
      width 6px
      min-width 6px
      height 6px
      content ''
      background-color $textActiveButtonColor
      border-radius 50%
      transform translateX(6px)
    }

    &:before {
      transform translateX(-12px)
    }
  }
}